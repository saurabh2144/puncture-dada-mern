<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/tsparticles@2.11.1/tsparticles.bundle.min.js"></script>
    <style>
      #map {
        height: 500px;
        width: 100%;
        z-index: 0;
      }
    </style>
  </head>

  <body class="bg-gray-900 text-white min-h-screen flex flex-col">
   
    <div id="tsparticles" class="absolute inset-0 -z-10"></div>

    
    <%- include('../partials/navbar1') %>

    
    <main class="flex-grow pt-20 px-4">
      <div class="flex flex-col lg:flex-row justify-center items-start gap-6">
      
        <form action="/register" method="POST" enctype="multipart/form-data"
          class="bg-gray-800 text-white w-full max-w-md p-6 rounded-xl shadow-lg border border-gray-700 space-y-3"
        >
          <h2 class="text-2xl font-bold text-center mb-4">Mechanic Registration</h2>

          <input name="name" placeholder="Full Name" required class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded text-sm">
          <input name="phone" placeholder="Phone Number" required class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded text-sm">
          <input name="password" type="password" placeholder="Password" required class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded text-sm">

          <input name="latitude" id="latitude" placeholder="Latitude" readonly class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded text-sm">
          <input name="longitude" id="longitude" placeholder="Longitude" readonly class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded text-sm">

          <div class="text-sm">
            <label class="block mb-1">Profile Photo:</label>
            <input type="file" name="profilePic" required class="w-full text-sm">
          </div>

          <div class="text-sm">
            <label class="block mb-1">Aadhar Photo:</label>
            <input type="file" name="aadharPic" required class="w-full text-sm">
          </div>

          <button class="w-full bg-blue-600 hover:bg-blue-700 py-2 rounded font-semibold text-sm">Register</button>
        </form>


        <div class="w-full lg:w-[500px] h-[500px] mt-6 lg:mt-0 rounded-lg overflow-hidden border border-gray-700">
          <div id="map" class="rounded-lg"></div>
        </div>
      </div>
    </main>


    <%- include('../partials/footer') %>


    <script src="/js/particle.js">
      
    </script>
    <script>
      const map = L.map('map').setView([26.8467, 80.9462], 13); // Lucknow

      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; OpenStreetMap contributors'
      }).addTo(map);

      let marker;

      map.on('click', function (e) {
        const { lat, lng } = e.latlng;
        document.getElementById("latitude").value = lat.toFixed(6);
        document.getElementById("longitude").value = lng.toFixed(6);

        if (marker) map.removeLayer(marker);
        marker = L.marker([lat, lng]).addTo(map);
      });</script>
  </body>
</html>
