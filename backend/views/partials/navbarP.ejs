<div id="profilePanel"
  class="fixed top-0 right-0 h-full w-64 bg-gray-800 text-white shadow-lg transform translate-x-full transition-transform duration-300 z-50">
  <img 
    class="w-40 h-40 rounded-full object-cover border-4 border-white shadow-lg mx-auto" 
    src="/uploads/<%= mechanic.profilePic %>" 
    alt="profile pic" 
  />
  <div class="p-4 border-b border-gray-600 flex justify-between items-center">
    <h2 class="text-lg font-semibold">My Profile</h2>
    <button id="closePanel" class="text-white text-xl">&times;</button>
  </div>
  <div class="p-4 space-y-4">
    <p><strong>Name:</strong> <%= mechanic?.name %></p>
    <p><strong>Phone:</strong> <%= mechanic?.phone %></p>
    <p><strong>Total Earned:</strong> â‚¹12,500</p>
    <hr class="border-gray-600">
    <a href="/logout" class="block text-red-400 hover:text-red-500">Logout</a>
  </div>
</div>

<script>
  const profilePic = document.getElementById("profilePic");
  const panel = document.getElementById("profilePanel");
  const closeBtn = document.getElementById("closePanel");

  profilePic?.addEventListener("click", () => {
    panel.classList.remove("translate-x-full");
  });

  closeBtn?.addEventListener("click", () => {
    panel.classList.add("translate-x-full");
  });
</script>
